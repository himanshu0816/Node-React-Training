<h1>{{viewTitle}}</h1>
<form action="/api/finalupdate" method="POST">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter the Name" value="{{list.name}}"/>
    </div>
        <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Enter the E-mail Address" value="{{list.email}}" readonly/>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="pno" placeholder="Enter the Mobile Number" value="{{list.pno}}"/>
        </div>
        <div class="form-group col-md-6">
            <label>Password</label>
            <input type="text" class="form-control" name="password" placeholder="Enter the Password" value="{{list.password}}"/>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block btn-lg"  name="submit"/>
    </div>
</form>